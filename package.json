{
  "name": "gaiamundi",
  "private": true,
  "workspaces": [
    "backend",
    "."
  ],
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "// === DEV & BUILD === //": "",
    "dev": "pnpm dev:frontend",
    "dev:frontend": "vite",
    "dev:backend": "pnpm --prefix backend dev",
    "dev:all": "concurrently -n FRONTEND,BACKEND -c blue,green \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "build": "pnpm build:frontend",
    "build:frontend": "tsc -b && vite build",
    "build:backend": "pnpm --prefix backend build",
    "build:all": "concurrently -n FRONTEND,BACKEND -c blue,green \"pnpm build:frontend\" \"pnpm build:backend\"",
    "preview": "pnpm preview:frontend",
    "preview:frontend": "vite preview",
    "start:backend": "pnpm --prefix backend start",
    "preview:all": "concurrently -n FRONTEND,BACKEND -c blue,green \"pnpm preview:frontend\" \"pnpm start:backend\"",
    "// === DATABASE === //": "",
    "prisma:generate": "pnpm --prefix backend db:generate",
    "prisma:migrate": "pnpm --prefix backend db:migrate",
    "// === LINT & FORMAT === //": "",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,md}\"",
    "lint:frontend": "eslint src --ext .ts,.tsx --max-warnings=0",
    "lint:backend": "eslint backend/src --ext .ts,.tsx --max-warnings=0",
    "format:frontend": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "format:backend": "prettier --write \"backend/src/**/*.{ts,tsx,json,css,md}\"",
    "// === COMBO === //": "",
    "check:all": "concurrently -n LINT,FORMAT -c yellow,cyan \"pnpm lint\" \"pnpm format\"",
    "fix:all": "concurrently -n LINT-F,LINT-B,FORMAT-F,FORMAT-B -c yellow,green,cyan,magenta \"pnpm lint:frontend --fix\" \"pnpm lint:backend --fix\" \"pnpm format:frontend\" \"pnpm format:backend\"",
    "// === CLEAN === //": "",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force node_modules,dist,pnpm-lock.yaml,backend/node_modules,backend/dist\"",
    "// === SCRIPTS & TOOL'S === //": "",
    "i18n": "ts-node scripts/i18n-check.ts"
  },
